@model BlogNew.Models.UserEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2 class="mt-5">Edit User</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserId)

    <div class="mb-3">
        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2 mb-1" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 mb-1" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2 mb-1" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Role, Model.SelectRoles)
            @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.IsDisabled, htmlAttributes: new { @class = "control-label col-md-2 mb-1" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.IsDisabled, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IsDisabled, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div class="d-grid gap-1">
    @Html.ActionLink("Back to Users", "Index", null, new { @class = "link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" })
    @Html.ActionLink("Back to User's Posts", "Posts", new { id = Model.UserId }, new { @class = "link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
