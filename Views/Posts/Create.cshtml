@model BlogNew.Models.Post
@*<link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />*@

@{
    ViewBag.Title = "Posts";
}

<style>
    #Title {
        max-width: 100% ;
        background-color: #797878;
    }
    .input {
max-width: 100% ;
        background-color: #ff6a00;
    }

    #UserName{
max-width: 100% ;
        background-color: #ff6a00;
    } 

</style>

<h2>Posts</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row ">
            <div class="col-md-12 mx-auto ">
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control title", style = "max-width: 100%" })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>


 

                <div class="form-group">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @id = "tiny" })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IsPrivate, htmlAttributes: new { @class = "control-label" })
                    <div>
                        @Html.EditorFor(model => model.IsPrivate)
                        @Html.ValidationMessageFor(model => model.IsPrivate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}




<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.tiny.cloud/1/bcdxnqsdzr2xpwhq3vmk9xi7lat9ov3scbr2ksx0jx6ffo3c/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea#tiny',
                plugins: [
                'a11ychecker', 'advlist', 'advcode', 'advtable', 'autolink', 'checklist', 'export',
                'lists', 'link', 'image', 'charmap', 'preview', 'anchor', 'searchreplace', 'visualblocks',
                'powerpaste', 'fullscreen', 'formatpainter', 'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | a11ycheck casechange blocks | bold italic backcolor | alignleft aligncenter alignright alignjustify |' +
                'bullist numlist checklist outdent indent | removeformat | code table help'
        })
    </script>
}
